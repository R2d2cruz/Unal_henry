WindowManager:
    MainWindow:
    OptionsWindow:
    cremat:
    creest:
    edimat:
    ediest:
    vermat:
    verest:
    crearhor:

<MainWindow>:
    name:"main"

    canvas:
        Rectangle:
            source: 'assets/inicio.png'
            pos: self.pos
            size: self.size

    Button:
        background_normal: "assets/iniciar.png"
        background_down: "assets/iniciar2.png"
        pos: (125,100)
        size_hint: 0.35, 0.25
        on_release:
            app.root.current = "Options"
            root.manager.transition.direction = 'right'


