        on_release:
            app.root.current = "EdiEst"
            root.manager.transition.direction = 'right'

    Button:
        background_normal: "assets/vm.png"
        background_down: "assets/vm2.png"
        pos: (20,110)
        size_hint: 0.5, 0.4
        on_release:
            app.root.current = "VerMat"
            root.manager.transition.direction = 'right'

    Button:
        background_normal: "assets/ve.png"
        background_down: "assets/ve2.png"
        pos: (180,110)
        size_hint: 0.5, 0.4
        on_release:
            app.root.current = "VerEst"
            root.manager.transition.direction = 'right'

    Button:
        background_normal: "assets/atras.png"
        background_down: "assets/atras2.png"
