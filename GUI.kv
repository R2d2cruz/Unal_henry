        on_release:
            app.root.current = "main"
            root.manager.transition.direction = 'left'

    Button:
        background_normal: "assets/ch.png"
        background_down: "assets/ch2.png"
        pos: (100,-10)
        size_hint: 0.5, 0.4
        on_release:
            app.root.current = "CrearHor"
